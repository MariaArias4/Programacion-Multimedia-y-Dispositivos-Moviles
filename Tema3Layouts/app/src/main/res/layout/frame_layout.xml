<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="110dp"
        android:layout_height="115dp"
        android:background="#2196F3"
        android:layout_gravity="top|left">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Arriba izquierda">
        </TextView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="110dp"
        android:layout_height="115dp"
        android:background="#4CAF50"
        android:layout_gravity="top|right">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Arriba derecha">
        </TextView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="110dp"
        android:layout_height="115dp"
        android:background="#4CAF50"
        android:layout_gravity="top|center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Centro arriba">
        </TextView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="110dp"
        android:layout_height="115dp"
        android:background="#4CAF50"
        android:layout_gravity="bottom|left">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Abajo izquierda">
        </TextView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="110dp"
        android:layout_height="115dp"
        android:background="#4CAF50"
        android:layout_gravity="bottom|right">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Abajo derecha">
        </TextView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="110dp"
        android:layout_height="115dp"
        android:background="#4CAF50"
        android:layout_gravity="bottom|center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Centro abajo">
        </TextView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="110dp"
        android:layout_height="115dp"
        android:background="#4CAF50"
        android:layout_gravity="left|center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Centro izquierda">
        </TextView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="110dp"
        android:layout_height="115dp"
        android:background="#4CAF50"
        android:layout_gravity="right|center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Centro derecha">
        </TextView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="110dp"
        android:layout_height="115dp"
        android:background="#4CAF50"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Centro">
        </TextView>
    </FrameLayout>
</FrameLayout>